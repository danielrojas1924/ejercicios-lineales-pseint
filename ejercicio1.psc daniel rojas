	nombre <- "Daniel";
	apellido <- "Rojas";
	
	//3. procesar datos
	mensaje <- ' bienvenido usuario: '+nombre+" "+apellido + " Hola"
	
	//4. Imprimir resultados (Mensaje)
	Escribir mensaje
	FinAlgoritmo

	
	
